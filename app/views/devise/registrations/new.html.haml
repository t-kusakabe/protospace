= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!

  .container.user-new{ action: '' }
    .col-md-8.col-md-offset-2
      %header.row.user-nav.row
        .col-md-12
          %h2 Register

          .user-name_image.row
            .user-name.col-md-10
              = f.text_field :name, placeholder: 'Username', autofocus: true
           
            .user-image.col-md-2
              %button.btn.btn-primary Add image
           
              %input{ type: 'file' }/
          
          .user-email= f.email_field :email, placeholder: 'E-Mail'
          
          .user-password= f.password_field :password, placeholder: 'Password'

          .user-password= f.password_field :password_confirmation, placeholder: 'Password'

          .col-md-12
          %h4 Profile
          .user-user-profile.row
            .user-name.col-md-12
              = f.text_area :profile, placeholder: 'Profile'

          .col-md-12
          %h4 Position
          .user-user-member.row
            .user-name.col-md-12
              = f.text_area :position, placeholder: 'Position'

          %h4 Works 
          .user-name_image.row
            .user-name.col-md-12
              = f.text_area :occupation, placeholder: 'Works'
          .row.text-center.user-btn
            .form-actions
              = f.submit value: 'Save', class: "button btn btn-lg btn-primary btn-block"
