.container.user-page
  %header.user-nav
    .media
      .media-left
        = image_tag(current_user.avatar.url, alt: '64x64', data: { holder: { rendered: 'true' }}, class: 'media-object', style: 'width: 64px; height: 64px;')
      .media-body
        %h4#top-aligned-media.media-heading
          = @user.name
          %span.label.label-default.project-number
            = @user.prototypes.count
            %i Projects
        .proto-user
          %span.degree= @user.name
        .row
          .col-md-6
            %h4 Profile
            %p= @user.profile
          .col-md-6
            %h4 Works
            %p= @user.occupation

#prototypes
  .container
    .row
      .page
        = render partial: 'prototype', collection: @prototypes

= paginate @prototypes
