.container.user-page
  %header.user-nav
    .media
      .media-left
        = image_tag(current_user.avatar.url, alt: '64x64', data: { holder: { rendered: 'true' }}, class: 'media-object', style: 'width: 64px; height: 64px;')
      .media-body
        %h4#top-aligned-media.media-heading
          Top aligned media
          %span.label.label-default.project-number
            29
            %i Projects
        .proto-user
          %span.degree= current_user.name
        .row
          .col-md-6
            %h4 Profile
            %p= current_user.profile
          .col-md-6
            %h4 Works
            %p= current_user.occupation

.container.proto-list
  .row
    - @prototypes.each do |prototype|
      .col-sm-4.col-md-3.proto-content
        .thumbnail
          = link_to image_tag(prototype.thumbnails.first.thumbnail.url), prototype_path
          .caption
            %h3= prototype.title
            .proto-meta
              .proto-date
                = prototype.user.name
            %ul.proto-tag-list.list-inline
              %li
                = link_to 'iPad', '#', class: 'btn btn-default'
              %li
                = link_to 'wireframe', '#', class: 'btn btn-default'
  .text-center
    %ul.pagination
      = paginate(@prototypes)
