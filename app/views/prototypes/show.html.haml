.container.proto-page
  %header.row.user-nav
    -# ユーザー情報
    .col-md-6
      .media
        .media-left
          = image_tag(current_user.avatar.url, alt: '64x64', data: { holder: { rendered: 'true' }}, class: 'media-object', style: 'width: 64px; height: 64px;')

        .media-body
          %h4#top-aligned-media.media-heading
            = @prototype.title
          .proto-user
            = link_to current_user.name, user_path
            %span.degree= current_user.profile

    -# LIKE
    .col-md-6.text-right
      %button.btn.btn-default
        = image_tag("icon_heart.svg")
        Like
        %span.num 20
  -# main画像
  .row
    .col-md-9
      = image_tag(@prototype.thumbnails.first.thumbnail.url, class: 'img-responsive', style: 'margin: 0 auto')
    -# sub画像
    .col-md-3
      %ul.proto-sub-list.list-group
        - @prototype.thumbnails.each do |sub_thumbnail|
          - if sub_thumbnail.status == "sub"
            %li.list-group-item
              = image_tag(sub_thumbnail.thumbnail.url, class: 'img-responsive')
  -# プロトタイプinfo
  .row.proto-description
    .col-md-3
      %h4 Catch Copy
      %p= @prototype.catch_copy
    .col-md-6
      %h4 Concept
      %p= @prototype.concept
    .col-md-3
      %h4 Tag List
      %ul.proto-tag-list.list-inline
        %li
          .btn.btn-default= link_to 'iPad', '#'
        %li
          .btn.btn-default= link_to 'wireframe', '#'
  -# comment
  .row.proto-comments
    %h4.col-md-12
      Comments
      %span.num (10)
      %br
      = form_tag prototype_comments_path(params[:id]), method: :post, remote: true do
        .col-md-12
          = text_area_tag :content, '', placeholder: 'comment', maxlength: 200
          = hidden_field_tag :prototype_id, params[:id]
          = submit_tag 'comment'
          .comment_content
            = render template: 'prototypes/_comment', locals: { comments: @comments }
