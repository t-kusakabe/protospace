.jumbotron
  .container.text-center
    = image_tag("header_logo.png", alt: 'PROTO TYPE - SHARE THE PROTOTYPE', height: '73px')

.filter-nav
  .container
    .row
      %ul.nav.nav-pills.col-lg-11
        %li.active{role: 'presentation'}
          = link_to 'Popular PROTO', '#'
        %li{role: 'presentation'}
          = link_to 'Newest PROTO', '#'
      = button_tag 'View Tags', class: 'btn btn-default col-lg-1'

.container.proto-list
  .row
    - @prototypes.each do |prototype|
      .col-sm-4.col-md-3.proto-content
        .thumbnail
          = link_to image_tag(prototype.thumbnails.first.thumbnail.url), ''
          -# = image_tag(@prototype)
          .caption
            %h3 Salvation Army on iPad App Wireframe
            .proto-meta
              .proto-user
                = link_to 'by user', '#'
              .proto-posted
                Apr 26
            %ul.proto-tag-list.list-inline
              %li
                .btn.btn-default= link_to 'iPad', '#'
              %li
                .btn.btn-default= link_to 'wireframe', '#'
