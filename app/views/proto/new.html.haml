%h1= @thumbnail
= form_for @prototype do |f|
  .container.proto-new
    .col-md-8.col-md-offset-2
      %header.row.user-nav.row
        .col-md-12
          .proto-new-title= f.text_field :title, placeholder: "Title #{flash[:alert]}", autocomplete: 'off'
        .row
          .col-md-12
            .cover-image-upload
              = f.fields_for :thumbnails do |thumbnails_f|
                = thumbnails_f.hidden_field :status, value: "main"
                = thumbnails_f.file_field :thumbnail
          .col-md-12
            %ul.proto-sub-list.list-group
              %li.list-group-item.col-md-4
                .image-upload
                  = f.fields_for :thumbnails do |thumbnails_f|
                    = thumbnails_f.hidden_field :status, value: "sub"
                    = thumbnails_f.file_field :thumbnail
              %li.list-group-item.col-md-4
                .image-upload
                  = f.fields_for :thumbnails do |thumbnails_f|
                    = thumbnails_f.hidden_field :status, value: "sub"
                    = thumbnails_f.file_field :thumbnail
              %li.list-group-item.col-md-4
                .image-upload-plus
                  %span +
        .row.proto-description
          .col-md-12
            = f.text_field :catch_copy, placeholder: "Catch Copy #{flash[:alert]}", autocomplete: 'off', maxlength: '255'
            = f.text_area :concept, placeholder: "Concept #{flash[:alert]}", cols: '30', rows: '4', autocomplete: 'off', maxlength: '255'
          .col-md-12
            %h4 Tag List
            .row
              .col-md-3
                %input{ type: 'text', placeholder: 'Web Design' }/
              .col-md-3
                %input{ type: 'text', placeholder: 'UI' }/
              .col-md-3
                %input{ type: 'text', placeholder: 'Application' }/
        .row.text-center.proto-btn
          = f.submit 'Publish', class: 'btn btn-lg btn-primary btn-block'
