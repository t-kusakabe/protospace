.container.proto-page
  %header.row.user-nav
    .col-md-6
      .media
        .media-left
          = image_tag(current_user.avatar.url, alt: '64x64', data: { holder: { rendered: 'true' }}, class: 'media-object', style: 'width: 64px; height: 64px;')

        .media-body
          %h4#top-aligned-media.media-heading
            = @prototype.title
          .proto-user
            = link_to current_user.name, "/users/#{current_user.id}"
            %span.degree= current_user.profile

    .col-md-6.text-right
      %button.btn.btn-default
        = image_tag("icon_heart.svg")
        Like
        %span.num 20
  .row
    .col-md-9
      = image_tag(@prototype.thumbnails.first.thumbnail.url, class: 'img-responsive')
    .col-md-3
      %ul.proto-sub-list.list-group
        - @prototype.thumbnails.each do |sub_thumbnail|
          - if sub_thumbnail.status == nil
            %li.list-group-item
              = image_tag(sub_thumbnail.thumbnail.url, class: 'img-responsive')
  .row.proto-description
    .col-md-3
      %h4 Catch Copy
      %p= @prototype.catch_copy
    .col-md-6
      %h4 Concept
      %p= @prototype.concept
    .col-md-3
      %h4 Tag List
      %ul.proto-tag-list.list-inline
        %li
          .btn.btn-default= link_to 'iPad', '#'
        %li
          .btn.btn-default= link_to 'wireframe', '#'
  .row.proto-comments
    %h4.col-md-12
      Comments
      %span.num (10)
    .col-md-8
      .media
        .media-left
